<%- include("partials/headerSignon") %>
<div class="contact-wrap" style="width:60%;margin-right:auto;margin-left:auto;">
  <h1 class="text-light">Registrierung</h1>
  <form class="form-group" action="/register" method="POST">
  
    <!-- Eingabefelder -->
    <input class="form-control" name="name" type="text" placeholder="Benutzername" /> 
      <input class="form-control" name="vorname" type="text" placeholder="Vorname" />
      <input class="form-control" name="nachname" type="text" placeholder="Nachname" />
      <input class="form-control" name="username" type="email" placeholder="E-Mail Adresse" /> 
      
      <input class="form-control" name="plz" type="text" placeholder="Postleitzahl" />
      <input class="form-control" name="ort" type="text" placeholder="Wohnort" />
      <input class="form-control" name="strasse" type="text" placeholder="Strasse" />
      <input class="form-control" name="hausnr" type="text" placeholder="Hausnummer" />
      <input class="form-control" name="konto" type="text" placeholder="IBAN" />
      <input class="form-control" name="institut" type="text" placeholder="Institut" />
      
    <input class="form-control" name="password" type="password" placeholder="Passwort" /> 
      <input class="form-control" name="pass2" type="password" placeholder="Passwort wiederholen" /> 
      <br>
    <input class="btn btn-primary" name="submit" type="submit" value="Registrieren" /><br><br> <!-- submitbutton -->
      
      <a href="../login" >Schon registriert?</a> <!-- Verlinkung: zum Login zurÃ¼ck -->
  </form>
  
  
  </div>



