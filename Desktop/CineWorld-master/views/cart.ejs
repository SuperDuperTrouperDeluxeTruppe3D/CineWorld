
<%-include("partials/header") %>
<%  if (bookings) { %>
    <div class="row">
        <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
            <ul class="list-group">
                <% bookings.forEach(function(booking){ %>
                <li class="list-group-item">
                <span class="badge"><%= booking.qty%></span>

               <strong><%= booking.item.filmTitle%></strong>

                <span class="label label-success">€ <%= booking.price%></span>
                <div class="btn-group">
                    <button class="btn btn-primary btn-xs dropdown-toggle" type="button" data-toggle="dropdown">Action<span class="caret"></span></button>
                    <ul class="dropdown-menu">
                        <li><a href="/reduce/<%= booking.item._id%>" > Reduce by 1</a></li>
                        <li><a href="/reduce/<%= booking.item._id%>" > Remove All</a></li>
                    </ul>
                </div>
                </li>
                    <% } ); %>
            </ul>
            </br>

        </div>
    </div>

    <div class="row">
        <div class="col-sm-6 col-md-6 col-md-offset.3 col-sm-offset">
            <strong>Total: € <%=totalPrice%> </strong>
        </div>
    </div>
    <hr>

    <div class="row" style="float: right; margin-right: 2.5%;">
        <form method="POST" action="/payment">
            <input type="submit" value="Mit PayPal Bezahlen" name="bsubmit" class="checkout"
                   style="color:black"><!-- ohne Produkte im Warenkorb kein Einkauf -->
        </form>
    </div>


<%}else {%>

    <div class="row">
        <div class="col-sm-6 col-md-6 col-md-offset.3 col-sm-offset">
            <h2>No Items in Cart</h2>
        </div>
    </div>

<%};%>

<%-include("partials/footer") %>




