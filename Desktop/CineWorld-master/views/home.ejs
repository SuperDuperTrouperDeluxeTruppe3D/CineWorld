<!-- Highlight section -->
<section id="highlight" style="background-image: url(/images/bg.png);">
  <br>
    <h2 class="text-white">Highlights in der CineWorld Mannheim</h2>
    <!-- carousel-->
    <div id="highlightSlide" class="carousel slide carousel-fade d-block w-50 mx-auto" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#highlightSlide" data-slide-to="0" class="active"></li>
            <li data-target="#highlightSlide" data-slide-to="1"></li>
            <li data-target="#highlightSlide" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <a href="#"><img src="images/film1.jpg" class="d-block w-100 p-3 mx-auto" alt="..."></a>
            </div>
            <div class="carousel-item">
                <a href="#"><img src="images/film2.jpg" class="d-block w-100 p-3 mx-auto" alt="..."></a>
            </div>
            <div class="carousel-item">
                <img src="images/film3.jpg" class="d-block w-100" alt="...">
            </div>
        </div>
        <a class="carousel-control-prev mx-auto" href="#highlightSlide" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next mx-auto" href="#highlightSlide" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

</section>

