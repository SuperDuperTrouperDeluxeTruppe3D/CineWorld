<section id="pricing">

    <div class="jumbotron "style="background-image: url(/images/bg.png);">
        <div class="container-fluid">

            <div class="card-deck">
                <% movies.forEach(function(item){ %>
                <div class="col-lg-4 col-md-6 " style="margin-bottom: 25px;"> 
                <div class="card">
                  <a href="/films/<%= item.title %>">
                    <div class="card-header bg-secondary">
                        <h5 class="card-title text-white"><%= item.title %> <br/> <%= item.genre %></h5>
                      </a>
                    </div>
                    <div class="card-body bg-secondary">
                      <a href="/films/<%= item.title %>">
                        <img class="card-img-bottom" src="<%= item.photo %>" alt="movie1"/>
                        <p class="card-text text-white">Auch in 3D vorgestellt</p>
                        </a>
                    </div>
                </div>
                </div>
                    <% } ); %>
            </div>
        </div>
    </div>
</section>



